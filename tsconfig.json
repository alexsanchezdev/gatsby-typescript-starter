{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "$components/*": ["src/components/*"],
      "$utils/*": ["src/utils/*"],
      "$icons/*": ["src/icons/*"],
      "$images/*": ["src/images/*"]
    }
  }
}
